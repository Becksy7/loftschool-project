script(type="text/x-template")#reviews-template
    .slider
        .slider__header
            .slider__title.section-title Что обо мне говорят
            .slider__buttons
                button(
                    type="button"
                    @click="previous()"
                    ref="prevBtn"
                ).slider__btn.round-btn.round-btn--pointer-left
                button(
                    type="button"
                    @click="next()"
                    ref="nextBtn"
                ).slider__btn.round-btn.round-btn--pointer-right
        flickity(ref="flickity" :options="flickityOptions").slider__content
            .slider__item(v-for="review in reviews")
                .quote
                    .quote__text
                        p {{review.text}}
                    .quote__user
                        .user-min
                            .user-min__avatar
                                .user-min__pic-wrapper
                                    img(:src="review.photo").user-min__avatar-pic
                            .user-min__info
                                .user-min__name {{review.author}}
                                .user-min__occ {{review.occ}}
