.menu {
  &__list {
    display: flex;
    justify-content: center;
  }
  &__item {
    margin-right: 60px;
    &:last-child {
      margin-right: 0;
    }
  }
  &__link {
    text-decoration: none;
    white-space: nowrap;
    transition: $base-transition;
    &:hover {
      color: $main-brand-color;
      //font-weight: 600;
    }
  }
}
