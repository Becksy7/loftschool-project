.thumbs {
  display: flex;
  justify-content: flex-end;
  &__item {
    height: 104px;
    width: 18%;
    @include desktop {
      height: 6vw;
    }
    @include tablets {
      height: 9vw;
    }
    &.active,
    &:hover {
      outline: 3px solid #f29400;
      z-index: 1;
    }
  }
  &__link {
    display: block;
    transition: $base-transition;
    height: 100%;
    padding: 0;
    background-color: transparent;
  }
  &__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
}
